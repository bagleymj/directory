<div class="row">
  <div class="span4">
    <h3>Location Name</h3>
  </div>
</div>
<% @locations.each do |location| %>
  <div class="row">
    <div class="span4">
      <%= link_to location.name, :action => :show, :id => location.id %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="span4">
    <%= link_to "Add New Location", :action => :new %>
  </div>
</div>
