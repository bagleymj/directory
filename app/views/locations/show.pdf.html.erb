<!DOCTYPE html>
<html>
<head>
  <title>Gresco Directory | <%= @title %></title>
  <%= wicked_pdf_stylesheet_link_tag  "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="on-paper">
  <% i = 0 %>
  <% p = 0 %>
  <% @employees.each do |employee| %>
    <% if i % 6 == 0 %>
      <div class="pdf-page">
        <table class="pdf-page">
        <% p += 1 %><% end %>
      <% if i % 3 == 0 %><tr class="pdf-row"><% end %>
        <td style="width:33%">
          <table class="page-layout">
            <tr>
              <td class="center">
                <%= wicked_pdf_image_tag employee .photo.url %>
              </td>
            </tr>
            <tr>
              <td>
                <table class="table table-striped table-condensed table-bordered">
                  <tr>
                    <th>
                      Name
                    </th>
                    <td>
                      <%= employee.name %>
                    </td>
                  </tr>
                  <tr>
                    <th>
                      Address
                    </th>
                    <td>
                      <%= employee.address1 %><br />
                      <% unless employee.address2.blank? %>
                        <%= employee.address2 %><br />
                      <% end %>
                      <%= employee.city %>, <%= employee.state %> <%= employee.zip %>
                    </td>
                  </tr>
                  <tr>
                    <th>
                      Email
                    </th>
                    <td>
                      <%= employee.email %>
                    </td>
                  </tr>
                  <tr>
                    <th>
                      Home
                    </th>
                    <td>
                      <%= employee.home_num %>
                    </td>
                  </tr>
                  <tr>
                    <th>
                      Mobile
                    </th>
                    <td>
                      <%= employee.mobile_num %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
        <% i += 1 %>
      <% if i % 3 == 0  %></tr><% end %>
    <% if i % 6 == 0 %></table>
  </div>
   <% end %>
  <% end %>
  <% if i % 6 != 0 %>
    <% until i % 6 == 0 do %>
        <% if i % 3 == 0 %><tr><% end %>
          <td>
            &nbsp;
          </td>
          <% i += 1 %>
        <% if i % 3 == 0 %></tr><% end %>
      <% if i % 6 == 0 %></table>
    </div><% end %>
    <% end %>
  <% end %>
</div>
</body>
</html>
