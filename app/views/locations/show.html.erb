<div class="row">
  <div class="span2">
    <%= @location.address1 + "\n" + @location.address2 %><br />
    <%= @location.city + ", " + @location.state + " " + @location.zip %>
  </div>
</div>
<div class="row">
  <div class="span1">
    <small><%= link_to "Edit Location", :action => :edit, :id => @location.id %></small>
  </div>
  <div class="span1">
    <small><%= link_to "Delete Location", @location, :method => :delete, :confirm => "Are you sure?",
      :title => "Delete #{@location.name}" %></small>
  </div>
</div>
<div class="row">
  <span class="span12">
    <table class="table table-striped">
      <tr>
        <th>
          Employee
        </th>
        <th>
          Address
        </th>
        <th>
          Home Phone
        </th>
        <th>
          Mobile Phone
        </th>
        <th>
          Birthday
        </th>
        <th>
          Hire Date
        </th>
      </tr>
      <% @employees.each do |employee| %>
        <tr>
          <td>
            <%= employee.name %>
          </td>
          <td>
            <%= employee.address1 + "\n" + employee.address2 %><br />
            <%= employee.city + ", " + employee.state + " " + employee.zip %>
          </td>
          <td>
            <%= employee.home_num %>
          </td>
          <td>
            <%= employee.mobile_num %>
          </td>
          <td>
            <%= employee.birthday %>
          </td>
          <td>
            <%= employee.hire_date %>
          </td>
        </tr>
      <% end %>
    </table>
  </span>
</div>
