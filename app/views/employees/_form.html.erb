
<div class="row">
  <div class="span1">
    &nbsp;
  </div>
  <div class="span8">
    <% if @employee.errors.full_messages.any? %>
      <div class="alert alert-block alert-error">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <h4>Please correct the following errors:</h4>
        <ul>
          <% @employee.errors.full_messages.each do |error| %>
            <li>
              <%= error %>
            </li>
          <%end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="span3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, :class => "span3" %>
      </div>
      <div class="span3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, :class=> "span3" %>
      </div>
    </div>

    <div class="row">
      <div class="span6">
        <%= f.label :email %>
        <%= f.text_field :email, :class => "span6" %>
      </div>
    </div>

    <div class="row">
      <div class="span3">
        <%= f.label :location_id %>
        <%= f.collection_select :location_id, Location.all, :id, :name, :prompt => true, :class => "span3" %>
      </div>
      <div class="span3">
        <%= f.label :job_title %>
        <%= f.text_field :job_title, :class => "span3" %>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <%= f.label :home_num %>
        <%= f.text_field :home_num, :class => "span2" %>
      </div>
      <div class="span2">
        <%= f.label :company_cell %>
        <%= f.text_field :company_cell, :class => "span2" %>
      </div>
      <div class="span2">
        <%= f.label :personal_cell %>
        <%= f.text_field :personal_cell, :class => "span2" %>
      </div>
      <div class="span1">
        <%= f.label :extension %>
        <%= f.text_field :extension, :class => "span1" %>
      </div>
    </div>
    <div class="row">
      <div class="span5">
        <%= f.label :birthday %>
        <%= f.date_select :birthday, :start_year => 1930, 
          :class => "span5"  %>
      </div>
      <div class="span5">
        <%= f.label :hire_date  %>
        <%= f.date_select :hire_date, :start_year => 1960, :class => "span5"  %>
      </div>
    </div>
    <div class="row">
      <div class="span6">
        <%= f.label :address1 %>
        <%= f.text_field :address1, :class => "span6" %>
      </div>
      <div class="span6">
        <%= f.label :address2 %>
        <%= f.text_field :address2, :class => "span6" %>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <%= f.label :city %>
        <%= f.text_field :city, :class => "span4" %>
      </div>
      <div class="span2">
        <%= f.label :state %>
        <%= f.text_field :state, :class => "span2" %>
      </div>
      <div class="span2">
        <%= f.label :zip %>
        <%= f.text_field :zip, :class => "span2" %>
      </div>
    </div>
    <div class="row">
      <div class="span6">
        <%= f.label :photo %>
        <%= f.file_field :photo, :class => "span6" %>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <%= f.submit  %>
      </div>
    </div>
  </div>
</div>
