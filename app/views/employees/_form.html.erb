  <div class="row">
    <div class="span3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :class => "span3" %>
    </div>
    <div class="span3">
      <%= f.label :middle_name %>
      <%= f.text_field :middle_name, :class => "span3" %>
    </div>
    <div class="span3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class=> "span3" %>
    </div>
  </div>

  <div class="row">
    <div class="span6">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="span4">
      <%= f.label :location_id %>
      <%= f.collection_select :location_id, Location.all, :id, :name, :prompt => true %>
    </div>
  </div>
  <div class="row">
    <div class="span3">
      <%= f.label :home_num %>
      <%= f.text_field :home_num %>
    </div>
    <div class="span3">
      <%= f.label :mobile_num %>
      <%= f.text_field :mobile_num %>
    </div>
  </div>
  <div class="row">
    <div class="span5">
      <%= f.label :birthday  %>
      <%= f.date_select :birthday  %>
    </div>
    <div class="span5">
      <%= f.label :hire_date  %>
      <%= f.date_select :hire_date  %>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <%= f.label :address1 %>
      <%= f.text_field :address1, :class => "span6" %>
    </div>
    <div class="span6">
      <%= f.label :address2 %>
      <%= f.text_field :address2, :class => "span6" %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <%= f.label :city %>
      <%= f.text_field :city, :class => "span4" %>
    </div>
    <div class="span2">
      <%= f.label :state %>
      <%= f.text_field :state, :class => "span2" %>
    </div>
    <div class="span2">
      <%= f.label :zip %>
      <%= f.text_field :zip, :class => "span2" %>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <%= f.submit  %>
    </div>
  </div>
