<div class="row">
  <div class="span4">
    <%= image_tag @employee .photo.url %>
  </div>
  <div class="span6">
    <table class="table table-striped table-condensed table-bordered">
      <tr>
        <th>
          Home Phone
        </th>
        <td>
          <%= @employee.home_num %>
        </td>
      </tr>
      <tr>
        <th>
          Mobile Phone
        </th>
        <td>
          <%= @employee.mobile_num %>
        </td>
      </tr>
      <tr>
        <th>
          Address
        </th>
        <td>
          <strong><%= @employee.name %></strong><br />
          <%= @employee.address1 + "\n" + @employee.address2 %><br />
          <%= @employee.city + ", " + @employee.state + " " + @employee.zip %>
        </td>
      </tr>
      <tr>
        <th>
          Birthday
        </th>
        <td>
          <%= @employee.birthday %>
        </td>
      </tr>
      <tr>
        <th>
          Hire Date
        </th>
        <td>
          <%= @employee.hire_date %>
        </td>
      </tr>
    </table>
    <h2>Family Members</h2>
    <table class="table table-striped table-condensed table-bordered">
      <thead>
        <th>
          Name
        </th>
        <th>
          Relationship
        </th>
        <th>
          Birthday
        </th>
        <th>
          Actions
        </th>
      </thead>
      <% @family_members.each do |family_member| %>
        <tr>
          <td>
            <%= family_member.name %>
          </td>
          <td>
            <%= family_member.relationship %>
          </td>
          <td>
            <%= family_member.birthday %>
          </td>
          <td>
            <%= link_to "Edit", :url => "#" %> |
            <%= link_to "Delete", :url => "#" %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td>
          <%= link_to "Add New Family Member", :controller => :family_members,
            :action => :new, :employee_id => @employee.id, 
            :last_name => @employee.last_name %>
        </td>
        <td>
          &nbsp;
        </td>
        <td>
          &nbsp;
        </td>
        <td>
          &nbsp;
        </td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="span1">
    <%= link_to "Edit Employee", :action => :edit, :id => @employee.id %>
  </div>
  <div class="span1">
    <%= link_to "Delete Employee", @employee, :method => :delete, :confirm => "Really?",
                                                                  :title => "Delete #{@employee.name}" %>
  </div>
</div>
